#!/bin/bash -x

# Configures application's remote logging service (rsyslog).

function print_help {
    echo "Usage: $0 app-name namespace uuid"

    echo "$0 $@" | logger -p local0.notice -t openshift_origin_rsyslogd_configure
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

cartridge_type="rsyslogd-2.0"
source "/etc/openshift/node.conf"
source ${CARTRIDGE_BASE_PATH}/abstract/lib/util


setup_embedded_configure "$1" $2 $3
import_env_vars


RSYSLOG_INSTANCE_DIR=$OPENSHIFT_HOMEDIR/$cartridge_type

#
# Create the core of the application
#
if [ -d "$RSYSLOG_INSTANCE_DIR" ]; then
    client_error "Embedded $cartridge_type already attached to $application"
    exit 132
fi

create_cartridge_instance_dir "$cartridge_type"
pushd "$RSYSLOG_INSTANCE_DIR" > /dev/null
mkdir -p run
chmod go+rwx run 
cp -a ${CART_INFO_DIR}/configuration/etc ${RSYSLOG_INSTANCE_DIR}/
popd > /dev/null


#
# Setup Permissions
#
#chmod +x "$RSYSLOG_INSTANCE_DIR/"*.sh || error "Failed to chmod new application scripts" 122
chown $user_id.$group_id -R "$RSYSLOG_INSTANCE_DIR/" || error "Failed to chown new application space.  Please contact support" 123
chown root.root "$RSYSLOG_INSTANCE_DIR" 
observe_setup_var_lib_dir "$RSYSLOG_INSTANCE_DIR"

#
# Enable rsyslogd.
#


# Alter PATH so that the rsyslogd "setup" script is called.
export PATH=${CART_INFO_DIR}/bin/:$PATH
sed -i "s#export \s*PATH=#export PATH=$PATH:#" $OPENSHIFT_HOMEDIR/.env/PATH
super_run_as_user "$CART_INFO_DIR/bin/setup enable"
sleep 1

source $CART_INFO_DIR/configuration/etc/rsyslog

client_result ""
client_result "$cartridge_type added to application ${application}"
client_result ""
client_result "This is an experimental cartridge for testing remote logging  " 
client_result "your rsyslog config options are: ${SYSLOGD_OPTIONS}"
